<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        background-color: #f2f2f2;
        font-family: Arial, Helvetica, sans-serif;
      }

      .search-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 100px auto;
        padding: 30px;
        width: 70%;
        background-color: #fff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 25px;
      }
      .card {
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: left;
        margin: 10px auto;
        padding: 30px;
        background-color: #fdfdfd;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        font-family: "Courier New", Courier, monospace;
      }
      h3 {
        margin-bottom: 10px;
      }
      h1 {
        margin-bottom: 10px;
      }
      .heading-div {
        border-radius: 5px;
        border: navy;
        border-width: 2px;
      }
      .query-span {
        color: rgb(56, 201, 201);
      }
      .logo {
        margin-bottom: 30px;
        width: 200px;
        height: auto;
      }
    </style>
    <title>Pysearch result</title>
  </head>
  <body>
    <div class="search-container">
      <h1 style="width: 100%">
        Search Results for "<span class="query-span"><%= query %></span>" :
      </h1>
      <% result.forEach(item => { %>
      <div class="card">
        <div class="heading-div"><h3><%= item.title %></h3></div>
        <div class="heading-div"><p><%= item.description %></p></div>
        <div class="heading-div"><p><%= item.installMethod %></p></div>
        <div class="heading-div"><p><%= item.gitHubStar %></p></div>
        <a href="<%= item.url %>">See more</a>
      </div>
      <% }); %>
    </div>
  </body>
</html>
